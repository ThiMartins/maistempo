<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/bordas_recycler">

    <TextView
            android:id="@+id/TextoAvaliarRaking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="16dp"
            android:text="@string/ToqueAvaliar"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:padding="4dp"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"/>

    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/TextoAvaliarRaking"
            android:layout_margin="16dp"
            android:id="@+id/RatingLocal"
            style="@style/Widget.AppCompat.RatingBar"/>
    <Button
            android:text="@string/Enviar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/EnviarRating"
            android:background="@drawable/borda_botao"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/RatingLocal"
            app:layout_constraintTop_toBottomOf="@id/TextoAvaliarRaking"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>